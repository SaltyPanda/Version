{% extends 'base.html.twig' %}

{% block body %}
    <h1>City</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ city.name }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if city.createdAt %}{{ city.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Update_at</th>
                <td>{% if city.updateat %}{{ city.updateat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cities_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cities_edit', { 'id': city.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
