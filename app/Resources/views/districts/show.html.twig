{% extends 'base.html.twig' %}

{% block body %}
    <h1>District</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ district.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ district.name }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if district.createdAt %}{{ district.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updateat</th>
                <td>{% if district.updateAt %}{{ district.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('districts_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('districts_edit', { 'id': district.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
