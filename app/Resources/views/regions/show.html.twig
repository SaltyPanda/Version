{% extends 'base.html.twig' %}

{% block body %}
    <h1>Region</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ region.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ region.name }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if region.createdAt %}{{ region.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Update_at</th>
                <td>{% if region.updateAt %}{{ region.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('regions_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('regions_edit', { 'id': region.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
